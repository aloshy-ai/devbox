{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "iterm2@latest",
    "gh@latest",
    "fira-code-nerdfont@latest",
    "coreutils-full@latest",
    "vscode@latest",
    "direnv@latest",
    "mkpasswd@latest",
    "gash-utils@latest",
    "inetutils@latest",
    "docker@latest",
    "brave@latest"
  ],
  "shell": {
    "init_hook": [
      "echo \"▄▀█ █░░ █▀█ █▀ █░█ █▄█ ░ ▄▀█ █\n█▀█ █▄▄ █▄█ ▄█ █▀█ ░█░ ▄ █▀█ █\""
    ],
    "scripts": {
      "spotlight": [
        "ln -s '${DEVBOX_PACKAGES_DIR}/Applications' ~/Applications/DevboxApps",
        "mdutil -s ~/Applications/DevboxApps"
      ],
      "sync": [
        "devbox global pull $REPOSITORY -f",
        "devbox global push $REPOSITORY -f"
      ]
    }
  }
}
